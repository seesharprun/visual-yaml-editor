{
  "name": "documentdb-mql-reference-editor",
  "displayName": "DocumentDB - MongoDB Query Language (MQL) Reference",
  "description": "This Visual Studio Code extension provides a powerful dual-editing experience for MongoDB Query Language (MQL) reference documentation stored in YAML format. Designed specifically for maintaining and editing structured reference content, it offers both a rich visual interface and traditional YAML text editing.",
  "version": "0.0.1",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/web/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "documentdbmqlreference.editor",
        "displayName": "Visual Editor",
        "selector": [
          {
            "filenamePattern": "*.mql.yml"
          },
          {
            "filenamePattern": "*.mql.yaml"
          },
          {
            "filenamePattern": "*.dql.yml"
          },
          {
            "filenamePattern": "*.dql.yaml"
          }
        ],
        "priority": "default"
      }
    ],
    "configurationDefaults": {
      "yaml.schemas": {
        "https://raw.githubusercontent.com/seesharprun-documentdb-prototype/seesharprun-documentdb-prototype.github.io/refs/heads/main/schema/reference.data.schema.json": [
          "**/*.{mql,dql}.{yml,yaml}"
        ]
      }
    },
    "chatParticipants": [
      {
        "id": "documentdb-mql-reference-editor.chat-participant",
        "name": "mqlyml",
        "fullName": "MQL YAML Assistant",
        "description": "Help with MongoDB Query Language YAML documentation",
        "isSticky": false,
        "commands": [
          {
            "name": "new",
            "description": "Generate a new MQL YAML reference document from scratch"
          },
          {
            "name": "fix",
            "description": "Fix YAML syntax or validation issues in the current file"
          },
          {
            "name": "edit",
            "description": "Copy edit YAML content using documentation best practices"
          }
        ],
        "disambiguation": [
          {
            "category": "validation",
            "description": "The user wants to validate their MQL YAML file or check if it conforms to the schema requirements.",
            "examples": [
              "Is my YAML valid?",
              "Check if this file is correct",
              "Does my YAML have any errors?",
              "Validate my MQL YAML"
            ]
          },
          {
            "category": "generation",
            "description": "The user wants to create a new MQL reference document or generate examples for MongoDB operators or commands.",
            "examples": [
              "Create a new reference for the $regex operator",
              "Generate a YAML file for the count command",
              "Help me document the $match operator",
              "I need a reference for $group"
            ]
          },
          {
            "category": "editing",
            "description": "The user wants to improve, enhance, or fill out specific fields in their existing MQL YAML documentation.",
            "examples": [
              "Add more examples to my YAML",
              "Fill out the description field",
              "Improve my documentation",
              "Can you add better examples?",
              "Enhance the parameters section"
            ]
          },
          {
            "category": "troubleshooting",
            "description": "The user needs help fixing errors, syntax issues, or validation problems in their MQL YAML file.",
            "examples": [
              "How do I fix these validation errors?",
              "My YAML won't parse correctly",
              "Fix the syntax in my file",
              "There's an error in my YAML"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "node scripts/generate-validator.js && webpack",
    "watch-web": "node scripts/generate-validator.js && webpack --watch",
    "package-web": "node scripts/generate-validator.js && webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/assert": "^1.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/vscode": "^1.106.0",
    "@types/webpack-env": "^1.18.8",
    "assert": "^2.1.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.1",
    "js-yaml": "^4.1.1",
    "mocha": "^11.7.5",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "process": "^0.11.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.42",
    "@typespec/compiler": "^1.6.0",
    "ajv": "^8.17.1",
    "react-syntax-highlighter": "^16.1.0"
  }
}
